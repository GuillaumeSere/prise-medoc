// Firestore Security Rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Médicaments: accès limité au propriétaire du document
    match /medicaments/{medicamentId} {
      // Lecture: autorisée si le doc appartient à l'utilisateur OU depuis l'API serveur
      allow read: if (request.auth != null && resource.data.uid == request.auth.uid) 
                  || request.auth == null; // Permet l'accès depuis l'API serveur

      // Création: uid du doc doit correspondre à l'utilisateur
      allow create: if request.auth != null
                    && request.resource.data.uid == request.auth.uid
                    // validations de base
                    && request.resource.data.nom is string
                    && request.resource.data.heure is string
                    && request.resource.data.pris is bool;

      // Mise à jour: seulement par le propriétaire
      allow update: if request.auth != null
                    && resource.data.uid == request.auth.uid
                    // empêche de changer le uid vers un autre
                    && request.resource.data.uid == resource.data.uid;

      // Suppression: seulement par le propriétaire
      allow delete: if request.auth != null
                    && resource.data.uid == request.auth.uid;
    }

    // Utilisateurs: chaque user lit/écrit seulement son doc
    match /users/{userId} {
      // Lecture: par le propriétaire OU depuis l'API serveur
      allow read: if (request.auth != null && request.auth.uid == userId) 
                  || request.auth == null; // Permet l'accès depuis l'API serveur
      // Écriture: seulement par le propriétaire
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Tout le reste: refusé par défaut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}